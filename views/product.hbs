{{>jumbotron}}

<!-- mute -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 order-lg-1 order-2">
            <ul class="image_list zoom">
                <li class="zoom" data-image="{{productImage2}}"><img class="zoom" src="{{productImage2}}" ></li>
                <li class="zoom" data-image="{{productImage3}}"><img class="zoom" src="{{productImage3}}" ></li>
                <li class="zoom" data-image="{{productImage4}}"><img class="zoom" src="{{productImage4}}" ></li>
            </ul>
        </div>
        <div class="col-lg-4 order-lg-2 order-1">
            <div class="image_selected"><img class="zoom" src="{{productImage1}}"></div>
        </div>
        <div class="col-lg-6 order-3">
            <div class="product_description">
                <div class="product_name">{{productName}}</div>
                <div class="rating">{{rating}}</div>
                <div> <span class="product_price">{{productPrice}}</div>
                <hr class="singleline">
                <div> <span class="product_info">{{productInfo}}<span><br> <span class="product_info margin-top-15">Warranty: 6 months warranty<span><br> <span class="product_info margin-top-15">7 Days easy return policy<span><br> <span class="product_info margin-top-15">In Stock: 25 units sold this week<span> </div>
                <div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="br-dashed margin-top-15">
                                <div class="row">
                                    <div class="col-md-3 col-xs-3"> <img src="https://img.icons8.com/color/48/000000/price-tag.png"> </div>
                                    <div class="col-md-9 col-xs-9">
                                        <div class="pr-info"> <span class="break-all">Get 5% discount CODE: LOVEVAPEROOROO</span> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7"> </div>
                    </div>
                    <div class="row margin-top-15">
                        <div class="col-xs-6 margin-left-15"> <span class="product_options">Colors</span><br> <button class="btn btn-danger btn-lg"> </button> <button class="btn btn-dark btn-lg"> </button> <button class="btn btn-secondary btn-lg"> </button> <button class="btn btn-warning btn-lg"> </button> </div>
                    </div>
                </div>
                <hr class="singleline">
                <div class="order_info d-flex flex-row">
                    <form action="#">
                </div>
                <div class="row">
                    <div class="col-xs-6 margin-left-13">
                        <div class="product_quantity"> <span>QTY:</span> <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                            <div class="quantity_buttons">
                                <div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
                                <div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6"> <button type="button" class="btn btn-primary shop-button">Add to Cart</button> <button type="button" class="btn btn-success shop-button">Buy Now</button>
                        <div class="product_fav"><i class="fas fa-heart"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
